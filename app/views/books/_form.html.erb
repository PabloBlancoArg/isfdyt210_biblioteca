  <% end %>

  <div class="field form-group">
    <%= form.text_field :title, class:"form-control", placeholder:"Titulo del libro" %>
  </div>

  <div class="field form-group">
    <%= form.text_field :author, class:"form-control", placeholder:"Autor" %>
  </div>

  <div class="field form-group">
    <%= form.text_field :isbn, class:"form-control", placeholder:"ISBN"%>
  </div>

  <div class="field form-group">
    <%= form.text_field :editorial, class:"form-control", placeholder:"Editorial" %>
  </div>

  <div class="field form-group">
    <%= form.label :Fecha_de_publicacion %>
    <%= form.date_field :published_at, class:"form-control" %>
  </div>

  <div class="actions">
    <%= form.submit class:'btn btn-secondary' %>
  </div>
  <br>
<% end %>
