<h1>Libros</h1>

<br>


<table class="table table-striped table-bordered table-hover">
<thead class="thead-dark">
<tr>
<th>Titulo</th>
<th>Autor</th>
<th>ISBN</th>
<th>Publicado en</th>
<% if can? :manage, @book %>
    <th></th>
    <th></th>
    <th></th>
<% else %>
    <th></th>
<% end %>
</tr>
</thead>
<tbody>
<% @books.each do |book| %>
  <tr>
  <td><%= book.title %></td>
  <td><%= book.author %></td>
  <td><%= book.isbn %></td>
  <td><%= book.published_at %></td>
  <% if user_signed_in? %>
        <td><%= link_to 'Mostrar', book %></td>
  <%end%>
  <% if can? :manage, @loan %>
        <td><%= link_to 'Editar', edit_book_path(book) %></td>
        <td><%= link_to 'Borrar', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  <% end %>
      </tr>
    <% end %>
    </tbody>
  </table>

  <% if can? :manage, @book %>
      <%= link_to 'Nuevo libro', new_book_path, class:"btn btn-secondary" %><br>
    <br>
  <% end %>
